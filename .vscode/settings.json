{
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit"
    },
    "python.analysis.indexing": true,
    "python.analysis.autoImportCompletions": true
}